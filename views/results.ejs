<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Rezultati pretrage</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="images/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link rel="stylesheet" href="style/style.css">
    <link rel="stylesheet" href="style/results.css">
  </head>
  <body>
    <%- include('partials/header.ejs')  %>
    <% if(typeof result != "string") { %>
    <div class="container-fluid">
      <div class="container">
        <div class="row rezultati">
          <div class="col-12 text-center mt-5 mb-3 fs-2 fw-bold"> Rezultati pretrage</div>
      <% result.forEach(element => { %>
        <div class="col-12 text-center mt-3 mb-3 fs-3"><%= element %></div>
      <% }); %>
        </div>
      </div>
    </div>
    <% } else { %>
      <div class="container-fluid">
        <div class="container">
          <div class="row nema-rezultata">
            <div class=" col-12 text-center text-secondary fw-bold fs-2 mt-5 ">
              <%= result %>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    <%- include('partials/footer.ejs')  %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
  </body>
</html>